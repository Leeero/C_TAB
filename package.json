{
  "name": "customize_tab",
  "private": true,
  "version": "1.0.2",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:extension": "tsc && vite build && npm run copy-files",
    "copy-files": "mkdir -p dist && mkdir -p dist/assets && cp public/manifest.json dist/ && cp public/popup.html dist/ && cp -r public/icons dist/",
    "dev:extension": "vite build --watch",
    "dev:watch": "npm run copy-files && tsx scripts/dev.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "build:zip": "tsx scripts/build-zip.ts",
    "test:build": "tsx scripts/test-build.ts"
  },
  "lint-staged": {
    "*.{ts,tsx}": ["eslint --fix"]
  },
  "dependencies": {
    "antd": "^5.14.1",
    "archiver": "^7.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/archiver": "^5.3.4",
    "@types/chrome": "^0.0.287",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.13.0",
    "lint-staged": "^16.2.7",
    "tsx": "^4.19.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.1",
    "vite": "^6.0.3"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
